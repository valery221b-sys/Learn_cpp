{
    "name": "C++ Student Sandbox",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "workspaceFolder": "/home/student/projects",
    "runArgs": [
        "--cap-drop=ALL",
        "--cap-add=SYS_PTRACE",
        "--security-opt=seccomp=unconfined"
    ],
    "containerEnv": {
        "CC": "clang",
        "CXX": "clang++"
    },
    "remoteUser": "student",
    "mounts": [
        "source=${localWorkspaceFolder},target=/home/student/projects,type=bind,consistency=cached"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "mhutchie.git-graph"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "cmake.configureOnOpen": true,
                "cmake.generator": "Ninja",
                "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
                "C_Cpp.intelliSenseEngine": "default"
            }
        }
    },
    "postCreateCommand": [
        "git config --global --add safe.directory /home/student/projects",
        "git config --global user.name \"Student\"",
        "git config --global user.email \"student@users.noreply.github.com\"",
        "git config --global core.autocrlf false",
        "echo 'Sandbox ready'"
    ],
    "features": {},
    "shutdownAction": "stopContainer"
}